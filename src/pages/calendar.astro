---
// Calendar Page - Visual streak calendar view
import Layout from '../layouts/Layout.astro';
---

<Layout title="Calendar - Habit Build">
  <div class="calendar-page container">
    <header class="page-header">
      <h1 class="page-title">Your Journey</h1>
      <p class="page-subtitle" id="challenge-name">Loading...</p>
    </header>
    
    <div class="calendar-legend">
      <div class="legend-item">
        <span class="legend-dot legend-dot--complete"></span>
        <span class="legend-label">Complete</span>
      </div>
      <div class="legend-item">
        <span class="legend-dot legend-dot--partial"></span>
        <span class="legend-label">Partial</span>
      </div>
      <div class="legend-item">
        <span class="legend-dot legend-dot--missed"></span>
        <span class="legend-label">Missed</span>
      </div>
      <div class="legend-item">
        <span class="legend-dot legend-dot--future"></span>
        <span class="legend-label">Future</span>
      </div>
    </div>
    
    <div class="calendar-grid" id="calendar-grid">
      <!-- Calendar days will be rendered here -->
    </div>
    
    <!-- Day Detail Modal -->
    <div class="day-modal" id="day-modal" hidden>
      <div class="day-modal-backdrop" data-action="close"></div>
      <div class="day-modal-content">
        <div class="day-modal-header">
          <div class="day-modal-date">
            <span class="day-modal-number" id="modal-day-number">Day 1</span>
            <span class="day-modal-full" id="modal-date-full">January 1, 2024</span>
          </div>
          <button class="day-modal-close" data-action="close" aria-label="Close">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>
        
        <div class="day-modal-goals" id="modal-goals">
          <!-- Goals will be rendered here -->
        </div>
      </div>
    </div>
    
    <div class="no-challenge" id="no-challenge" hidden>
      <div class="empty-state">
        <div class="empty-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
        </div>
        <h2 class="empty-title">No Active Challenge</h2>
        <p class="empty-description">Start a new challenge to see your calendar</p>
        <a href="/" class="btn btn-primary">Start Challenge</a>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { getCurrentChallenge, getChallengeEntries, initStore } from '../scripts/store';
  import { computeDayStatuses } from '../scripts/challenge';
  import { formatFullDate } from '../scripts/dates';
  import { escapeHTML } from '../scripts/ui';
  
  // Initialize and render
  async function init() {
    // initStore() is async (handles IndexedDB migration if needed)
    await initStore();
    
    // All store functions are now synchronous
    const challenge = getCurrentChallenge();
    const calendarGrid = document.getElementById('calendar-grid')!;
    const noChallenge = document.getElementById('no-challenge')!;
    const challengeNameEl = document.getElementById('challenge-name')!;
    
    if (!challenge) {
      calendarGrid.style.display = 'none';
      document.querySelector('.calendar-legend')!.setAttribute('hidden', '');
      noChallenge.hidden = false;
    } else {
      challengeNameEl.textContent = challenge.name;
      renderCalendar(challenge);
    }
  }
  
  init();
  
  function renderCalendar(challenge: any) {
    const calendarGrid = document.getElementById('calendar-grid')!;
    
    // Get entries (now synchronous)
    const entries = getChallengeEntries(challenge.id);
    const statuses = computeDayStatuses(challenge, entries);
    
    // Day headers
    const dayNames = ['S', 'M', 'T', 'W', 'T', 'F', 'S'];
    dayNames.forEach(name => {
      const header = document.createElement('div');
      header.className = 'calendar-header';
      header.textContent = name;
      calendarGrid.appendChild(header);
    });
    
    // Get starting day of week for alignment
    const startDate = new Date(challenge.startDate);
    const startDayOfWeek = startDate.getDay();
    
    // Add empty cells for alignment
    for (let i = 0; i < startDayOfWeek; i++) {
      const empty = document.createElement('div');
      empty.className = 'calendar-cell calendar-cell--empty';
      calendarGrid.appendChild(empty);
    }
    
    // Render each day
    statuses.forEach((status) => {
      const cell = document.createElement('button');
      cell.className = 'calendar-cell';
      cell.dataset.date = status.date;
      cell.dataset.dayNumber = String(status.dayNumber);
      
      // Status classes
      if (status.isToday) cell.classList.add('calendar-cell--today');
      if (status.isFuture) cell.classList.add('calendar-cell--future');
      if (status.isComplete) cell.classList.add('calendar-cell--complete');
      else if (status.isMissed) cell.classList.add('calendar-cell--missed');
      else if (status.completedGoals > 0) cell.classList.add('calendar-cell--partial');
      
      // Day number
      const dayNum = document.createElement('span');
      dayNum.className = 'cell-day';
      dayNum.textContent = String(status.dayNumber);
      cell.appendChild(dayNum);
      
      // Click handler
      cell.addEventListener('click', () => showDayModal(status, challenge, entries));
      
      calendarGrid.appendChild(cell);
    });
  }
  
  function showDayModal(status: any, challenge: any, entries: any[]) {
    const modal = document.getElementById('day-modal')!;
    const dayNumber = document.getElementById('modal-day-number')!;
    const dateFull = document.getElementById('modal-date-full')!;
    const goalsContainer = document.getElementById('modal-goals')!;
    
    dayNumber.textContent = `Day ${status.dayNumber}`;
    dateFull.textContent = formatFullDate(status.date);
    
    // Get entries for this date
    const dayEntries = entries.filter(e => e.date === status.date);
    
    // Render goals
    goalsContainer.innerHTML = challenge.goals.map((goal: any) => {
      const entry = dayEntries.find(e => e.goalId === goal.id);
      const completed = entry?.completed ?? false;
      const note = entry?.note;
      const escapedName = escapeHTML(goal.name);
      const escapedNote = escapeHTML(note);
      const escapedColor = escapeHTML(goal.color);
      
      return `
        <div class="modal-goal ${completed ? 'modal-goal--completed' : ''}">
          <div class="modal-goal-status goal-${escapedColor}">
            ${completed ? `
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            ` : ''}
          </div>
          <div class="modal-goal-info">
            <span class="modal-goal-name">${escapedName}</span>
            ${note ? `<span class="modal-goal-note">${escapedNote}</span>` : ''}
          </div>
        </div>
      `;
    }).join('');
    
    modal.hidden = false;
  }
  
  // Close modal
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.closest('[data-action="close"]')) {
      document.getElementById('day-modal')!.hidden = true;
    }
  });
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      document.getElementById('day-modal')!.hidden = true;
    }
  });
</script>

<style>
  .calendar-page {
    padding: var(--space-5) var(--space-4);
    padding-bottom: calc(100px + env(safe-area-inset-bottom));
    max-width: 500px;
    margin: 0 auto;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: var(--space-5);
  }
  
  .page-title {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-1);
  }
  
  .page-subtitle {
    color: var(--text-muted);
    font-size: var(--text-sm);
  }
  
  /* Legend Card */
  .calendar-legend {
    display: flex;
    justify-content: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    flex-wrap: wrap;
    padding: var(--space-3) var(--space-4);
    background-color: var(--bg-card);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-card);
  }
  
  .legend-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }
  
  .legend-dot {
    width: 10px;
    height: 10px;
    border-radius: var(--radius-full);
  }
  
  .legend-dot--complete {
    background-color: var(--accent-success);
  }
  
  .legend-dot--partial {
    background-color: var(--accent-warning);
  }
  
  .legend-dot--missed {
    background-color: var(--accent-danger);
  }
  
  .legend-dot--future {
    background-color: var(--border);
  }
  
  .legend-label {
    font-size: var(--text-xs);
    color: var(--text-muted);
  }
  
  /* Calendar Container */
  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 6px;
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    padding: var(--space-4);
    box-shadow: var(--shadow-card);
  }
  
  .calendar-header {
    text-align: center;
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--text-muted);
    padding: var(--space-2) 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .calendar-cell {
    aspect-ratio: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2px;
    border-radius: var(--radius-md);
    border: none;
    background-color: var(--bg-secondary);
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
    padding: 4px;
    min-width: 0;
    font-size: 0;
  }
  
  .calendar-cell:hover:not(.calendar-cell--empty):not(.calendar-cell--future) {
    transform: scale(1.08);
    box-shadow: var(--shadow-md);
    z-index: 1;
  }
  
  .calendar-cell:active:not(.calendar-cell--empty):not(.calendar-cell--future) {
    transform: scale(0.95);
  }
  
  .calendar-cell--empty {
    background: transparent;
    cursor: default;
  }
  
  .calendar-cell--future {
    background-color: var(--bg-tertiary);
    cursor: default;
    opacity: 0.6;
  }
  
  .calendar-cell--today {
    box-shadow: inset 0 0 0 2px var(--accent-primary);
  }
  
  .calendar-cell--complete {
    background: linear-gradient(135deg, var(--accent-success-light), #d4e8d3);
  }
  
  .calendar-cell--partial {
    background: linear-gradient(135deg, var(--accent-warning-light), #f5e6c8);
  }
  
  .calendar-cell--missed {
    background: linear-gradient(135deg, var(--accent-danger-light), #f5d5d1);
  }
  
  .cell-day {
    font-family: var(--font-display);
    font-size: clamp(10px, 3vw, 14px);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    line-height: 1;
  }
  
  .calendar-cell--future .cell-day {
    color: var(--text-muted);
  }
  
  .calendar-cell--complete .cell-day {
    color: var(--accent-success);
  }
  
  .calendar-cell--missed .cell-day {
    color: var(--accent-danger);
  }
  
  .cell-indicator {
    font-size: clamp(6px, 2vw, 9px);
    color: var(--text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }
  
  .calendar-cell--complete .cell-indicator {
    color: var(--accent-success);
  }
  
  .calendar-cell--missed .cell-indicator {
    color: var(--accent-danger);
  }
  
  .calendar-cell--partial .cell-indicator {
    color: var(--accent-warning);
    font-weight: var(--font-semibold);
  }
  
  .cell-indicator svg {
    width: clamp(10px, 3vw, 14px);
    height: clamp(10px, 3vw, 14px);
  }
  
  /* Day Modal */
  .day-modal {
    position: fixed;
    inset: 0;
    z-index: var(--z-modal);
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }
  
  .day-modal[hidden] {
    display: none;
  }
  
  .day-modal-backdrop {
    position: absolute;
    inset: 0;
    background-color: rgba(45, 42, 38, 0.5);
    animation: fadeIn var(--duration-fast) var(--ease-out);
  }
  
  .day-modal-content {
    position: relative;
    width: 100%;
    max-width: 480px;
    background-color: var(--bg-card);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
    padding: var(--space-5);
    padding-bottom: calc(var(--space-6) + env(safe-area-inset-bottom));
    max-height: 80vh;
    overflow-y: auto;
    animation: slideUp var(--duration-normal) var(--ease-out);
  }
  
  .day-modal-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: var(--space-5);
  }
  
  .day-modal-date {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
  
  .day-modal-number {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--accent-primary);
  }
  
  .day-modal-full {
    color: var(--text-muted);
    font-size: var(--text-sm);
  }
  
  .day-modal-close {
    width: 44px;
    height: 44px;
    border: none;
    background-color: var(--bg-secondary);
    border-radius: var(--radius-full);
    color: var(--text-muted);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--duration-fast) var(--ease-out);
  }
  
  .day-modal-close:hover {
    background-color: var(--bg-tertiary);
    color: var(--text-primary);
  }
  
  .day-modal-close svg {
    width: 20px;
    height: 20px;
  }
  
  .day-modal-goals {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .modal-goal {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-lg);
    transition: all var(--duration-fast) var(--ease-out);
  }
  
  .modal-goal--completed {
    background-color: var(--accent-success-light);
  }
  
  .modal-goal-status {
    width: 28px;
    height: 28px;
    border-radius: var(--radius-full);
    border: 2px solid currentColor;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .modal-goal--completed .modal-goal-status {
    background-color: currentColor;
  }
  
  .modal-goal-status svg {
    width: 16px;
    height: 16px;
    color: white;
  }
  
  .modal-goal-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    flex: 1;
    min-width: 0;
  }
  
  .modal-goal-name {
    font-weight: var(--font-medium);
    font-size: var(--text-base);
  }
  
  .modal-goal--completed .modal-goal-name {
    color: var(--accent-success);
  }
  
  .modal-goal-note {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }
  
  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-10) var(--space-4);
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-card);
  }
  
  .empty-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto var(--space-4);
    color: var(--accent-primary);
    opacity: 0.6;
  }
  
  .empty-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .empty-title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-2);
  }
  
  .empty-description {
    color: var(--text-muted);
    margin-bottom: var(--space-6);
  }
  
  /* Mobile Responsiveness */
  @media (max-width: 380px) {
    .calendar-grid {
      gap: 4px;
      padding: var(--space-3);
    }
    
    .calendar-cell {
      border-radius: var(--radius-sm);
    }
    
    .legend-item {
      gap: var(--space-1);
    }
    
    .calendar-legend {
      gap: var(--space-2);
      padding: var(--space-2) var(--space-3);
    }
  }
</style>
